{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Kestrel": {
        "EndpointDefaults": {
            "Protocols": "Http2",
            "SslProtocols": [ "Tls12", "Tls13" ]
        },
        "Endpoints": {
            "Https": {
                "Url": "https://localhost:5001",
                "Protocols": "Http2"
            }
        }
    },
    "Email": {
        "SmtpServer": "smtp.gmail.com",
        "SmtpPort": 587,
        "SmtpEmailSecretName": "EmailServiceUsername"
    },
    "AzureKeyVault": {
        "Secrets": {
            "FirebaseApiKey": "FirebaseApiKey",
            "EmailServiceKey": "EmailServiceKey",
            "EncryptionKey": "EncryptionKey",
            "EmailServiceUsername": "EmailServiceUsername"
        }
    }
}